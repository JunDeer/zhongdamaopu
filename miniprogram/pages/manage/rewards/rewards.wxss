page {
  width: 750rpx;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
}

image {
  border-radius: 10rpx;
  width: 670rpx;
  height: 670rpx;
  background-color: var(--color-gray-light);
}

button {
  width: 45%;
  display: inline-block;
  font-size: 35rpx;
  box-sizing: border-box;
}

button.primary {
  background-color: var(--color-primary);
}

button + button {
  margin-left: 10%;
  /* float: right; */
}

button.long {
  margin: 20rpx 0 0 0;
  width: 100%;
}

.floating-box{
  position: fixed;
  bottom: 20rpx;
  margin: 20rpx 3rpx;
  padding: 20rpx;
  box-shadow: 0rpx 0rpx 30rpx gainsboro;
  border-radius: 20rpx;
  background-color: rgba(255,255,255,0.95);
  width: 650rpx;
}

.bottom-clear-box {
  height: 100rpx;
  opacity: 0;
}

button.bottom {
  width: 100%;
  background-color: var(--color-primary);
}

.reward-box {
  box-sizing: border-box;
  padding: 50rpx 10rpx;
  margin-bottom: 50rpx;
  box-shadow: 0rpx 0rpx 30rpx var(--color-gray);
  border-radius: 20rpx;
}

.label {
  font-size: 30rpx;
  font-weight: 400;
}

.label.record {
  color: var(--color-gray-max);
}

.label.reward {
  font-weight: bold;
}

#top-box {
  font-size: 30rpx;
  font-weight: 300;
  color: var(--color-gray-max);
  box-shadow: 0rpx 0rpx 30rpx var(--color-gray);
  padding: 30rpx;
  margin: 30rpx 0;
  border-radius: 10rpx;
}

#container {
  width: 750rpx;
  height: 100%;
  overflow: hidden;
}

input, picker, textarea {
  width: 95%;
  border-bottom: 2rpx var(--color-primary) solid;
  background-color: var(--color-white-dark);
  padding: 10rpx;
  color: var(--color-black-light);
}

.changeColumn {
  height: 5rem;
}