button {
  width: 47%;
  display: inline-block;
  font-size: 35rpx;
  box-sizing: border-box;
}

button.primary {
  background-color: #ffd101;
}

button + button {
  margin-left: 6%;
  /* float: right; */
}

button.long {
  margin: 20rpx 0 0 0;
  width: 100%;
}

.verify-box {
  box-sizing: border-box;
  padding: 30rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0rpx 0rpx 30rpx #ddd;
  border-radius: 20rpx;
}

.label {
  font-size: 33rpx;
  font-weight: 300;
  margin: 10rpx 0;
}
.label.cat text {
  font-weight: bold;
  text-decoration: underline;
}
.label.user.shotTime{
  margin-bottom: 20rpx;
}

#total-count {
  font-size: 30rpx;
  font-weight: 300;
  color: #888;
  box-shadow: 0rpx 0rpx 30rpx #ddd;
  padding: 40rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
}